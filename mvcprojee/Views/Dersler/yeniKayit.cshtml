@model mvcprojee.ViewModel.dersModel
@{
    ViewBag.Title = "yeniKayit";
}

<h2>Yeni Kayit Ekle</h2>
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("yeniKayit", "Dersler", FormMethod.Post))
        {
            @Html.LabelFor(k => k.dersadi)<br/>
            @Html.TextBoxFor(k => k.dersadi, new {@class="form-control"})
            @Html.ValidationMessageFor(k => k.dersadi, null, new { @class = "text-danger" })<br />

            @Html.LabelFor(k => k.ogretmen)<br />
            @Html.TextBoxFor(k => k.ogretmen, new { @class = "form-control" })
            @Html.ValidationMessageFor(k => k.ogretmen, null, new { @class = "text-danger" })<br />

            @Html.LabelFor(k => k.derssaati)<br />
            @Html.TextBoxFor(k => k.derssaati, new { @class = "form-control" })
            @Html.ValidationMessageFor(k => k.derssaati, null, new { @class = "text-danger" })<br />

            <input type="submit" value="Kaydet" class="btn btn-default" />

            if (ViewBag.sonuc != null)
            {
                <div class="alert alert-success">@ViewBag.sonuc</div>
            }
        }
    </div>
</div>

